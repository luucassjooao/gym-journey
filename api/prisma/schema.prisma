generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) @db.Uuid
  name     String
  email    String @unique
  password String

  @@map("user")
}

model MuscleGroup {
  id    String  @id @default(uuid()) @db.Uuid
  name  String
  media String?
  // photo, video, gif

  exercises Exercise[]

  @@map("mucles_groups")
}

model Exercise {
  id              String  @id @default(uuid()) @db.Uuid
  musclesGroupsId String  @map("muscles_groups_id") @db.Uuid
  name            String
  media           String?
  // photo, video, gif

  muscleGroup MuscleGroup @relation(fields: [musclesGroupsId], references: [id])

  @@map("exercises")
}
